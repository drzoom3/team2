.forecast-hourly {
    height: 300px;
    position: relative;
    display: flex;
    justify-content: space-between;
    counter-reset: hour -1;
    min-width: 960px;
    
    &__item {
        position: relative;
        flex: 1;
        margin: 20px 1px 50px;
        counter-increment: hour;
                        
        &__bar {
            width: 100%;
			position: absolute;
			transition: all 0.2s ease-in-out;
            
            &__text {
                text-align: center;
                position: absolute;
                left: 0;
                width: 100%;
                font-size: 12px;
                text-indent: -0.3em;
            }
            
            &_plus {
                bottom: 50%;
            }
            
            &_plus &__text {
                top: -20px;
            }
                
            &_minus {
                top: 50%;               
            }
            
            &_minus &__text {
                bottom: -20px;
            }
        }
        
        &:before {
            position: absolute;
            left: 0;
            display: block;
            content: counter(hour, decimal-leading-zero) ":00";
            bottom: -50px;
            width: 100%;
            font-size: 12px;
            text-align: center;
            color: #999;
        }
    }
    
}