.select {
	&__dropdown {
		display: inline-block;
		border: 1px solid #ccc;
		border-radius: 3px;
		padding: 6px 26px 5px 12px;
		cursor: pointer;
		position: relative;
		margin: 0 13px;
		font-size: 13px;
	}

	&__dropdown:after {
		content: '';
		position: absolute;
		top: 12px;
		right: 9px;
		width: 11px;
		height: 6px;
		background-image: url('images/arrow-bottom.png');
	}
}