.forecast-map {
    height: 510px;
    
    &__point {
        background: #FFFFFF;
        border-radius: 10px;
        padding: 2px 0;
        white-space:nowrap;
        width: 65px;
        height: 24px;
        line-height: 24px;
        text-align: center;
        position: absolute;
        left: -20px;
        top: -40px;
        box-shadow: 1px 1px 3px 0 rgba(0,0,0,.5);
        
        img {
            margin-right: 2px;
        }
        
        &:after {
            top: 100%;
            left: 20px;
            border-left: 0 solid transparent;
            border-right: 10px solid transparent;

            border-top: 10px solid #FFFFFF;
            content: " ";
            height: 0;
            width: 0;
            position: absolute;
        }
    }
}
