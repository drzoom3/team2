.tabs {
    font-size: 0;
    color: #000000;
    border-radius: 4px;
    display: inline-block;    
    
    &_item {
        display: inline-block;
        font-size: 13px;
        padding: 5px 14px;
        background: #FFFFFF;
        border: 1px solid #cccccc;
        margin: 0 -1px 0 0;
        
        &:first-child {
            border-top-left-radius: 4px;
            border-bottom-left-radius: 4px;
            overflow: hidden;
        }
        &:last-child {
            border-top-right-radius: 4px;
            border-bottom-right-radius: 4px;
            overflow: hidden;
        }
        &:focus {
            background: #FAFAFA;
        }
        
        &__active:focus,
        &__active {
            background: #ffeaae;
            border: 1px solid #dbc794;
            position: relative;
        }
    }
    
}